<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:seekarc="http://schemas.android.com/tools"
    android:orientation="vertical">

    <com.potyvideo.library.AndExoPlayerView
        android:id="@+id/andExoPlayerView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:andexo_aspect_ratio="aspect_16_9"
        app:andexo_full_screen="true"
        app:andexo_loop="finite"
        app:andexo_play_when_ready="true"
        app:andexo_resize_mode="Fill"
        app:andexo_show_controller="true" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/global_padding">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_local"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAY LOCAL VIDEO" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_local_audio"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="PLAY LOCAL Audio" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="PLAY MP4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_mp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="PLAY MP3" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_download_mp4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="download mp4" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_download_mp3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/yellow"
            android:text="download mp3" />



        <me.tankery.lib.circularseekbar.CircularSeekBar
            android:id="@+id/seek_bar"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center_horizontal"
            app:cs_negative_enabled="true"
            android:layout_marginTop="30dp"
            app:cs_circle_style="square"
            app:cs_disable_pointer = "true"
            android:pointerIcon="no_drop"
            app:cs_circle_color = "#E89898"
            app:cs_circle_progress_color = "#4CAF50"
            app:cs_circle_stroke_width="4dp"
            app:cs_pointer_stroke_width="4dp"
            app:cs_pointer_angle="0"/>




